<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    tools:context=".AddPatientActivity">

    <!-- Header Text -->
    <TextView
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Patient"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"/>

    <!-- Caretaker Info -->
    <TextView
        android:id="@+id/caretakerEmailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Caretaker Email: user@example.com"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        android:layout_marginBottom="8dp"/>

    <!-- Patient Email Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Patient Email"
        app:layout_constraintTop_toBottomOf="@id/caretakerEmailText"
        android:layout_marginTop="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/patientEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:importantForAutofill="no"
            android:maxLines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Add Patient Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addPatientButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Patient"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="@color/primary_color"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_add_user"
        app:iconTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/emailInputLayout"
        android:layout_marginTop="24dp"
        android:paddingVertical="12dp"/>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@id/addPatientButton"
        android:layout_marginVertical="24dp"/>

    <!-- Logout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/logoutButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@color/primary_color"
        app:strokeColor="@color/primary_color"
        app:strokeWidth="1dp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/addPatientButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:paddingVertical="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>